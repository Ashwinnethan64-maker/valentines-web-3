// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LovePage {
  id              String   @id @default(uuid())
  slug            String   @unique
  heroHeadline    String?
  partnerName     String
  yourName        String
  relationshipDate DateTime?
  themeColor      String   @default("#D32F2F")
  passwordHash    String?  // If null, page is public
  bgMusicUrl      String?
  loveLetter      String
  isPaid          Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  photos          Photo[]
  reasons         Reason[]
}

model Photo {
  id          String   @id @default(uuid())
  url         String
  pageId      String
  page        LovePage @relation(fields: [pageId], references: [id])
}

model Reason {
  id          String   @id @default(uuid())
  text        String
  pageId      String
  page        LovePage @relation(fields: [pageId], references: [id])
}
